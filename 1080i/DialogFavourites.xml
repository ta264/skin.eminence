<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window type="dialog" id="134">
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>

		<control type="group">

			<animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>
            
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <texture colordiffuse="Background">common/white.png</texture>
            </control>
			<control type="group">
                <animation effect="slide" end="horznegpad" start="0" time="200" condition="ControlGroup(9000).HasFocus() | Window.IsActive(DialogContextMenu.xml)">Conditional</animation>
			    <posx>horzpad</posx>
			    <posy>70</posy>
			    <include>DefSideLabel</include>
                <control type="panel" id="450">
                    <posx>listx</posx>
                    <posy>listy</posy>
                    <width>1458</width>
                    <height>700</height>
                    <onleft>60</onleft>
                    <onright>450</onright>
                    <onup>450</onup>
                    <ondown>450</ondown>
                    <pagecontrol>60</pagecontrol>
                    <viewtype label="539">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <orientation>vertical</orientation>

                    <itemlayout width="threecollist" height="fivelinelist">

                    <control type="image">
                        <width>threecolborder</width>
                        <height>fivelineborder</height>
                        <texture colordiffuse="PosterBorder" border="5">common/border-inner.png</texture>
                    </control>
                    <control type="image">
                        <posx>globalpad</posx>
                        <posy>globalpad</posy>  
                        <width>fiveline</width>
                        <height>fiveline</height>
                        <texture background="true">$VAR[SquareImage]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                    <control type="label">
                        <posx>30r</posx>
                        <posy>15</posy>
                        <width>310</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>PanelFG</textcolor>
                        <label>$VAR[VARLabel]</label>
                        <animation effect="slide" end="0,18" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
                    </control>
                    <control type="label">
                        <posx>30r</posx>
                        <posy>48</posy>
                        <width>310</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>PanelFG</textcolor>
                        <font>Font-ListInfo-Small</font>
                        <label>$INFO[ListItem.Label2]$VAR[WatchedLabel,   ,]</label>
                    </control>

                </itemlayout>

                <focusedlayout width="threecollist" height="fivelinelist">

                    <control type="image">
                        <width>threecolborder</width>
                        <height>fivelineborder</height>
                        <texture colordiffuse="Highlight-NF" border="5">common/white.png</texture>

                    </control>
                    <control type="image">
                        <posx>globalpad</posx>
                        <posy>globalpad</posy>  
                        <width>fiveline</width>
                        <height>fiveline</height>
                        <texture background="true">$VAR[SquareImage]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                    <control type="label">
                        <posx>30r</posx>
                        <posy>15</posy>
                        <width>310</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>Selected</textcolor>
                        <label>$VAR[VARLabel]</label>
                        <animation effect="slide" end="0,18" condition="IsEmpty(ListItem.Label2)">Conditional</animation>
                    </control>
                    <control type="label">
                        <posx>30r</posx>
                        <posy>48</posy>
                        <width>310</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <textcolor>Selected</textcolor>
                        <font>Font-ListInfo-Small</font>
                        <label>$INFO[ListItem.Label2]$VAR[WatchedLabel,   ,]</label>
                    </control>

                </focusedlayout>

                </control>
                <control type="scrollbar" id="60">
                    <posx>-8</posx>
                    <posy>listy</posy>
                    <height>globalh</height>
                    <onright>50</onright>
                    <animation effect="fade" start="100" end="0" time="400" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
                </control>
            </control>

		</control>
		
		<include>GlobalTopBar</include>

	</controls>

</window>
