<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2002">
    <defaultcontrol always="true">10</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <zorder>10</zorder>
    <controls>
        <include>GlobalOverlay</include>
        <include>GlobalLeftHeader</include>
        <control type="group">      
            <animation effect="slide" start="1920" end="0" delay="0" time="200">WindowOpen</animation>
            <animation effect="slide" start="1920" end="0" delay="0" time="200">Visible</animation>
            <include>DefContextMenuBackground</include>
            <control type="group">
                <animation effect="slide" end="0,16" condition="IsEmpty(Control.GetLabel(3))">Conditional</animation>
                <animation effect="slide" end="0,16" condition="IsEmpty(Control.GetLabel(4))">Conditional</animation>
                <control type="label" id="1">
                    <posx>1100</posx>
                    <posy>14</posy>
                    <width>700</width>
                    <align>left</align>
                    <font>Font-Button</font>
                    <align>left</align>
                    <textcolor>$VAR[HeaderColorFG]</textcolor>
                </control>  
                <control type="label" id="2">
                    <posx>1100</posx>
                    <posy>50</posy>
                    <width>700</width>
                    <align>left</align>
                    <font>Font-ListInfo</font>
                    <scroll>true</scroll>
                    <textcolor>$VAR[HeaderColorFG]</textcolor>
                </control>
                <control type="label" id="3">
                    <posx>1100</posx>
                    <posy>82</posy>
                    <width>700</width>
                    <font>Font-ListInfo</font>
                    <align>left</align>
                    <scroll>true</scroll>
                    <textcolor>$VAR[HeaderColorFG]</textcolor>
                </control>  
                <control type="label" id="4">
                    <posx>1100</posx>
                    <posy>114</posy>
                    <width>700</width>
                    <font>Font-ListInfo</font>
                    <align>left</align>
                    <scroll>true</scroll>
                    <textcolor>$VAR[HeaderColorFG]</textcolor>
                </control>                  
            </control>

        
            <control type="button" id="10">
                <posx>250</posx>
                <posy>29</posy>
                <width>334</width>
                <height>142</height>
                <texturefocus>noop</texturefocus>
                <textcolor>$VAR[HeaderColorFG]</textcolor>
                <focusedcolor>Highlight</focusedcolor>
            </control>

        </control>
    </controls>

</window>
